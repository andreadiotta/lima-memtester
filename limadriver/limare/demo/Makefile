TOP = ../..

APK = bin/LimareDemo-debug.apk
DIR = src/org/limadriver/limaredemo
SOURCES = $(DIR)/LimareDemo.java
# these files are generated by the android update project command.
REGEN = local.properties default.properties build.xml proguard.cfg

.PHONY = all clean install

include $(TOP)/Makefile.inc

all: $(APK)

clean: $(REGEN)
	ant clean
	rm -f $(REGEN)

install: $(APK)
	ant debug install

$(APK): $(SOURCES) $(REGEN)
	ant debug

$(REGEN):
	$(SDK)/tools/android update project --target $(ANDROID_TARGET) -p .
